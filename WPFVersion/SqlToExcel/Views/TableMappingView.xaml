<UserControl x:Class="SqlToExcel.Views.TableMappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlToExcel.Views"
             xmlns:vm="clr-namespace:SqlToExcel.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:TableMappingViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <TextBlock Text="源表:" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding AvailableSourceTables}"
                      SelectedItem="{Binding SelectedSourceTable}"
                      DisplayMemberPath="Name"
                      Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="目标表:" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding AvailableTargetTables}"
                      SelectedItem="{Binding SelectedTargetTable}"
                      DisplayMemberPath="Name"
                      Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="保存映射" Command="{Binding SaveMappingCommand}" Width="100" HorizontalAlignment="Left"/>
                <Button Content="导入配置" Command="{Binding ImportCommand}" Width="100" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="0" Grid.Column="1" ItemsSource="{Binding MappedTables}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="源表" Binding="{Binding SourceTable}" Width="*"/>
                <DataGridTextColumn Header="目标表" Binding="{Binding TargetTable}" Width="*"/>
                <DataGridTemplateColumn Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="删除" Command="{Binding DataContext.DeleteMappingCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding Id}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MappedTablesCount, StringFormat='总数: {0}'}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,10,5" FontWeight="Bold"/>
    </Grid>
</UserControl>